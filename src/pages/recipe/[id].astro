---
import { pocketbase } from "~/api";
import Layout from "~/layouts/Layout.astro"
import Recipe from "~/partials/Recipe.svelte";
import { Collections } from "~/types";

const recipe = await pocketbase.get(Collections.Recipes, String(Astro.params.id));
---

<Layout title={recipe.title}>
    <Recipe recipe={recipe} client:idle />
</Layout>